<h1>Users</h1>

<% @users.each do |user| %>
  <h2><%= user.name %></h2>
  <p><%= user.email %></p>
  <p><%= user.address %></p>
  <p><%= link_to 'Show', user %>
    <%= link_to 'Edit', edit_user_path(user) %>
    <%= link_to 'Delete', user, method: :delete, visible: true %>
  <hr />
<% end %>

<%= link_to 'New user', new_user_path %>