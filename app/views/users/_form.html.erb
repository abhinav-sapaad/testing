<%= form_for(@user) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>
  
  <div>
    <%= f.submit %>
  </div>

<% end %>